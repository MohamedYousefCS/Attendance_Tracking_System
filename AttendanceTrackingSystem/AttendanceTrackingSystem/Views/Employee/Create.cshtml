@model Employee

@{
    ViewData["Title"] = "Add Employee";
    Layout = "~/Views/Shared/MainLayout.cshtml";

}
<link href="~/css/employeeform.css" rel="stylesheet" />

<div class="container-fluid px-1 py-3 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11">
            <h4 class="text-center active ">Add Employee</h4>

            <div class="card">
                <form asp-action="Create" method="post" class="form-card">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Fname" class="form-control-label px-3">First name<span class="text-danger"> *</span></label>
                            <input asp-for="Fname" class="form-control" placeholder="Enter your first name">
                            <span asp-validation-for="Fname" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Lname" class="form-control-label px-3">Last name<span class="text-danger"> *</span></label>
                            <input asp-for="Lname" class="form-control" placeholder="Enter your last name">
                            <span asp-validation-for="Lname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-12 flex-column d-flex">
                            <label asp-for="Email" class="form-control-label px-3">Email<span class="text-danger"> *</span></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row justify-content-between text-left">
                       
                        <div class="form-group col-sm-12 flex-column d-flex">
                            <label asp-for="Password" class="form-control-label px-3">Password<span class="text-danger"> *</span></label>
                            <input asp-for="Password" class="form-control" placeholder="Enter Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="BirthDate" class="form-control-label px-3">Birth Date<span class="text-danger"> *</span></label>
                            <input asp-for="BirthDate" class="form-control" type="date" placeholder="">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Salary" class="form-control-label px-3">Salary<span class="text-danger"> *</span></label>
                            <input asp-for="Salary" class="form-control" placeholder="Enter salary">
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Mobile" class="form-control-label px-3">Mobile<span class="text-danger"> *</span></label>
                            <input asp-for="Mobile" class="form-control" placeholder="Phone">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="gender" class="form-control-label px-3">Gender<span class="text-danger"> *</span></label>
                            <select asp-for="gender" class="form-control">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row justify-content-between text-left">

                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Role" class="form-control-label px-3">Role<span class="text-danger"> *</span></label>
                            <select asp-for="Role" class="form-control">
                                <option value="Security">Security</option>
                                <option value="Admin">Admin</option>
                                <option value="StudentAffairs">Student Affairs</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row justify-content-end">
                        <div class="form-group col-sm-6">
                            <button type="submit" class="btn-block btn-primary">Add Employee</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
