@model PermissionRequest;
@{
    ViewData["Title"] = "createPermission";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    var RequestVal = Enum.GetValues(typeof(RequestType));
}

@section Styles{
    <style>
    #mainContainer {
        margin-top: 110px;
    }
    body {
        font-family: 'Lato', sans-serif;
    }

    h1 {
        margin-bottom: 40px;
    }

    label {
        color: #333;
    }

    .btn-send {
        font-weight: 300;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        width: 80%;
        margin-left: 3px;
    }

    .help-block.with-errors {
        color: #ff5050;
        margin-top: 5px;
    }

    .card {
        margin-left: 10px;
        margin-right: 10px;
    }
    span{
        color:red;
    }
    input{
        margin: 5px 0;
    }
</style>
}

<div class="container" id="mainContainer">
    <div class=" text-center mt-5 ">
        <h1>Permission Form</h1>
    </div>
    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">

                    <div class="container">
                        <form id="contact-form" role="form" asp-action="createPermission">



                            <div class="controls">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="form_name">name <span>*</span></label>
                                            <input id="form_name" type="text" name="name" class="form-control" value="@ViewBag.student.Fname" readonly>

                                        </div>
                                    </div>
                              
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="form_email">Email <span>*</span></label>
                                            <input id="form_email" type="email" name="email" class="form-control" value="@ViewBag.student.Email" readonly>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Type" >
                                                Permission Type <span>*</span>:
                                                <select asp-for="@Model.Type" class="styled-select" style="width:100%">

                                                    @foreach (var value in RequestVal)
                                                    {
                                                        <option value="@((int)value)">@value</option>
                                                    }
                                                </select>
                                            </label>
                                               
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Reason">Reason <span>*</span></label>
                                            <textarea asp-for="@Model.Reason" class="form-control" placeholder="Write your message here." rows="4" required="required" data-error="Please, leave us a message."></textarea>
                                            <span asp-validation-for="@Model.Reason"></span>
                                        </div>

                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Date">Date <span>*</span></label>
                                            <input type="date" asp-for="@Model.Date" required="required" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                            <span asp-validation-for="@Model.Date"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12">

                                        <input type="submit" class="btn btn-success btn-send  pt-2 btn-block " value="Send Request">

                                    </div>

                                </div>


                            </div>
                        </form>
                    </div>
                </div>


            </div>
            <!-- /.8 -->

        </div>
    </div>
</div>

@section Scripts{
<script>
    // Get today's date in the format "YYYY-MM-DD"
    var today = new Date().toISOString().split('T')[0];
    // Set the value of the input field to today's date
    document.querySelector('input[type="date"]').value = today;
</script>
}
