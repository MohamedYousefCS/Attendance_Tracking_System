@model IEnumerable<Track>
@{
    ViewData["Title"] = "GetAllTracks";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<link href="~/css/tabletracks.css" rel="stylesheet" />

<h1 class="text-center">Tracks</h1>

<div class="table-container">
    <table class="table">
        <thead>
            
            <tr>
                <th>Track ID</th>
                <th>Track Name</th>
                <th>Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">NO Tracks Exist</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TrackId</td>
                        <td>@item.TrackName</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a class="btn" asp-action="GetStudentByTrackID" asp-controller="Security" asp-route-id="@item.TrackId">
                                <span class="icon">&#x1F464;</span> Add Attendance
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
