@model IEnumerable<Track>
@{
    ViewData["Title"] = "GetAllTracks";
    Layout = "~/Views/Shared/MainLayout.cshtml";

}

<h1>Tracks</h1>

<table class="table table-bordered table-hover m-3">
    <thead>
    <th>Track ID</th>
    <th>Track Name</th>
    <th>Capacity</th>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">NO Tracks Exists</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.TrackId</td>
                    <td>@item.TrackName</td>
                    <td>@item.Capacity</td>
                    <td>
                        <a class="btn btn-outline-primary m-3" asp-action="GetStudentByTrackID" asp-controller="Security" asp-route-id="@item.TrackId">Add Students Attendance</a>

                    </td>

                </tr>
            }
        }

    </tbody>


</table>
