@model IEnumerable<Track>
@{
    ViewData["Title"] = "Display";
}

<table>
    <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Program Name</th>
        <th>Capacity</th>
        <th>Supervisor Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TrackName</td>
            <td>@item.Status</td>
            <td>@item.program.ProgramName</td>
            <td>@item.Capacity</td>
            <td>@item.Instructor.Fname @item.Instructor.Lname</td>
            <td><a asp-action="GetInstructorsForTrack" asp-controller="Track" asp-route-id="@item.TrackId">Show Instructor</a></td>
            <td><a asp-action="showstudentinTrack" asp-controller="Track" asp-route-id="@item.TrackId">Show Students</a></td>
            <td><a asp-action="Edit" asp-controller="Track" asp-route-id="@item.TrackId">Edit</a></td>
            <td><a asp-action="Delete" asp-controller="Track" asp-route-id="@item.TrackId">Delete</a></td>
        </tr>
    }
</table>

<a asp-action="Create" asp-controller="Track">Create Track</a>
</table>
@if (TempData["AlertMessage"] != null)
{
        <script>
            alert('@TempData["AlertMessage"]');
        </script>
}



