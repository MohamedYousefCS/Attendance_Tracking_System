
@{
    ViewData["Title"] = "UploadExcel";
}

<h1>UploadExcel</h1>


@using (Html.BeginForm("UploadExcel", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="file">Choose Excel file:</label>
        <input type="file" name="file" id="file" class="form-control-file" accept=".xlsx,.xls" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}